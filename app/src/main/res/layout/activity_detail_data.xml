<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailData"
    android:background="#FFFAF0"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/student1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelNim"
            android:textSize="14sp"
            android:drawableLeft="@drawable/ic_nim"
            android:text="NIM"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNim"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelNama"
            android:textSize="16sp"
            android:text="Nama"
            android:drawableLeft="@drawable/ic_name"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNama"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelTgl"
            android:textSize="16sp"
            android:text="Tanggal Lahir"
            android:drawableLeft="@drawable/ic_date"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textTgl"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelGender"
            android:textSize="16sp"
            android:text="Jenis Kelamin"
            android:drawableLeft="@drawable/ic_gender"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textGender"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelAlamat"
            android:textSize="16sp"
            android:text="Alamat"
            android:drawableLeft="@drawable/ic_address"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAlamat"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="TextView"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF0000"/>

    </LinearLayout>

  </LinearLayout>